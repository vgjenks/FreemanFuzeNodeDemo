<!DOCTYPE html>
<html>
	
	<% include head %>
	
	<body>
		<% include header %>
		<div class="container" style="padding-top: 50px;">
		<h1>
			<%= title %>
		</h1>
		<p>
			<div>
				<a href="/user/create">Add User</a>
			</div>
		</p>
		<p>
			<div>
				<div class="row">
					<div class="col-md-2"></div>
					<div class="col-md-2"></div>
					<div class="col-md-2">
						Username
					</div>
					<div class="col-md-2">
						Created
					</div>
					<div class="col-md-2">
						Last Login
					</div>
					<div class="col-md-2">
						Is Active
					</div>
				</div>
				<hr>
				<% users.forEach(user => { %>
				<div class="row">
					<div class="col-md-2">
						<a href="/user/edit/<%= user.user_id %>">Edit</a>
					</div>
					<div class="col-md-2">
						<form method="post" action="/user/delete/<%= user.user_id %>">
							<button type="submit" class="btn-link">Delete</a>
						</form>
					</div>
					<div class="col-md-2">
						<%= user.username %>
					</div>
					<div class="col-md-2">
						<%= user.created.toDateString() %>
					</div>
					<div class="col-md-2">
						<%= user.last_login %>
					</div>
					<div class="col-md-2">
						<%= Boolean(user.active) %>
					</div>
				</div>
				<% }); %>
			</div>
		</p>
	</div>
</body>

<% include footer %>

</html>